---
import { translations, type Language } from "../../utils/i18n";

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = translations[lang];
---

<footer class="border-t-4 border-primary bg-surface mt-20">
  <div
    class="container mx-auto py-8 px-6 text-center text-sm font-mono text-onSurfaceVariant"
  >
    <p class="mb-2 italic">“{t.quote}”</p>
    <p class="uppercase tracking-wide">{t.rights}</p>
  </div>
</footer>
