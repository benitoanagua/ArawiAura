---
import HeaderReact from "./HeaderReact";
import { translations, type Language } from "../../utils/i18n";
import { BASE_SEO_CONFIG } from "../../utils/seo.constants";

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = translations[lang];
const siteTitle = BASE_SEO_CONFIG[lang].siteName;

const nav = [
  { label: t.home, href: `/${lang}/` },
  { label: t.about, href: `/${lang}/about/` },
  { label: t.poems, href: `/${lang}/` },
  { label: t.archive, href: `/${lang}/archive/` },
  { label: t.contact, href: `/${lang}/contact/` },
];
---

<header class="border-b-4 border-primary bg-surface">
  <HeaderReact client:load {lang} title={siteTitle} {nav} />
</header>
