---
import MainLayout from "../../layouts/MainLayout.astro";
import Card from "../../components/ui/Card.astro";
import type { Language } from "../../utils/i18n";
import { translations } from "../../utils/i18n";

export async function getStaticPaths() {
  return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const validLang: Language = (lang === "es" || lang === "en") ? lang : "en";
const t = translations[validLang];

const pageTitle = t.about;
const pageDescription = validLang === "es"
  ? "Arawi Aura: un espacio íntimo para poesía en español e inglés. Pocos escriben, muchos leen y comparten."
  : "Arawi Aura: an intimate space for poetry in English and Spanish. Few write, many read and share.";
---

<MainLayout
  title={pageTitle}
  description={pageDescription}
  lang={validLang}
  canonicalPath={`/${validLang}/about/`}
>
  <Card elevated class="max-w-3xl mx-auto">
    <article class="mx-auto">
      <h1 class="text-3xl font-bold text-onSurface mb-6">{pageTitle}</h1>

      {validLang === "es" ? (
        <!-- Contenido en español - breve -->
        <div class="space-y-6">
          <div class="bg-primaryContainer/10 p-4 rounded-lg">
            <p class="text-onSurface">
              <strong>Arawi Aura</strong> es un diario poético íntimo mantenido desde 2017. 
              <em>Arawi</em> significa <em>poema</em> en quechua, <em>aura</em> es la brisa que lo lleva.
            </p>
          </div>

          <div class="space-y-3">
            <h3 class="text-xl font-semibold text-onSurface">Nuestra esencia</h3>
            <p class="text-onSurface">
              Un pequeño grupo escribe. Una gran comunidad lee, comparte y encuentra significado 
              en las palabras. La poesía pertenece a todos.
            </p>
          </div>

          <div class="space-y-3">
            <h3 class="text-xl font-semibold text-onSurface">Lo que encuentras aquí</h3>
            <ul class="list-disc list-inside space-y-1 text-onSurface">
              <li>Poesía cuidadosamente seleccionada</li>
              <li>Versiones en español e inglés</li>
              <li>Estructuras poéticas tradicionales</li>
              <li>Un espacio tranquilo para reflexionar</li>
            </ul>
          </div>

          <div class="bg-surfaceVariant/10 p-4 rounded-lg text-center">
            <p class="text-onSurfaceVariant italic">
              "Menos es más. La poesía crece en el silencio entre versos."
            </p>
          </div>

          <div class="text-center mt-6">
            <a href={`/${validLang}/`} class="btn-primary">
              Leer poemas
            </a>
          </div>
        </div>
      ) : (
        <!-- Content in English - concise -->
        <div class="space-y-6">
          <div class="bg-primaryContainer/10 p-4 rounded-lg">
            <p class="text-onSurface">
              <strong>Arawi Aura</strong> is an intimate poetry journal kept since 2017. 
              <em>Arawi</em> means <em>poem</em> in Quechua, <em>aura</em> is the breeze that carries it.
            </p>
          </div>

          <div class="space-y-3">
            <h3 class="text-xl font-semibold text-onSurface">Our essence</h3>
            <p class="text-onSurface">
              A small group writes. A large community reads, shares, and finds meaning 
              in the words. Poetry belongs to everyone.
            </p>
          </div>

          <div class="space-y-3">
            <h3 class="text-xl font-semibold text-onSurface">What you'll find here</h3>
            <ul class="list-disc list-inside space-y-1 text-onSurface">
              <li>Carefully curated poetry</li>
              <li>Spanish and English versions</li>
              <li>Traditional poetic structures</li>
              <li>A quiet space for reflection</li>
            </ul>
          </div>

          <div class="bg-surfaceVariant/10 p-4 rounded-lg text-center">
            <p class="text-onSurfaceVariant italic">
              "Less is more. Poetry grows in the silence between verses."
            </p>
          </div>

          <div class="text-center mt-6">
            <a href={`/${validLang}/`} class="btn-primary">
              Read poems
            </a>
          </div>
        </div>
      )}
    </article>
  </Card>
</MainLayout>